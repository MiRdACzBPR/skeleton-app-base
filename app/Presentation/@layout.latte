<!DOCTYPE html>
<html lang={$lang}>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">
	<title>{ifset title}{include title|stripHtml} | {/ifset}Nette Web</title>
</head>
<body>
	<div n:foreach="$flashes as $flash" n:class="px-0,alert-dismissible, fade, show, alert, py-1, my-0, text-center, $flash->type">{$flash->message}<button type="button" data-bs-dismiss="alert" aria-label="Close" class="float-end p-2 small btn-close"></button></div>
	{include _menu.latte}
	{include content}
	{block scripts}
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js" integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q" crossorigin="anonymous"></script>
	{/block}
</body>
</html>
